{
  "manifest_version": 2,
  "name": "Templates",
  "version": "4.0",
  "description": "Chrome extension for text templates.",
  "permissions": ["clipboardWrite", "clipboardRead", "storage", "contextMenus", "tabs", "https://*/*", "http://*/*"],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; object-src 'self'",
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "web_accessible_resources": [
    "templates.xlsx"
    ]
}

